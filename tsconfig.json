{
    "compilerOptions": {
        "target":"ES6",
        "strict": true,
        "watch": true,
        "module": "ES6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "include": ["static/src/**/*"]
}
